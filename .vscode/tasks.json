{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build ijvm",
            "type": "shell",
            "command": "make ijvm",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher":"$gcc",
            "group":{
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Build all tests",
            "type": "shell",
            "command": "make build_tests",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher":"$gcc",
            "group":{
                "kind": "build",
                "isDefault": false
            },
        },
    ]
}